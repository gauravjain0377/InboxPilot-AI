{
  "manifest_version": 3,
  "name": "InboxPilot AI - Gmail Assistant",
  "version": "1.0.0",
  "description": "AI-powered email assistant integrated directly into Gmail",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://mail.google.com/*",
    "https://*.google.com/*",
    "http://localhost:5000/*",
    "http://localhost:3000/*",
    "http://127.0.0.1:3000/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["contentScript.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "injectedUI.js",
        "styles.css",
        "services/apiService.js",
        "services/emailExtractor.js",
        "services/actionHandlers.js",
        "ui/inlineResultDisplay.js",
        "ui/replyToneSelector.js",
        "ui/composeToolbar.js",
        "ui/emailActions.js",
        "ui/emailListFeatures.js",
        "utils/domHelpers.js"
      ],
      "matches": ["https://mail.google.com/*"]
    }
  ]
}

