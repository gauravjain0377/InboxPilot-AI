{
  "manifest_version": 3,
  "name": "InboxPilot AI - Gmail Assistant",
  "version": "1.0.0",
  "description": "AI-powered email assistant integrated directly into Gmail",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://mail.google.com/*",
    "https://*.google.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["contentScript.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["injectedUI.js", "styles.css"],
      "matches": ["https://mail.google.com/*"]
    }
  ]
}

